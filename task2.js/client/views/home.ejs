<%- include('partials/header') %>
<div class="home-container">
  <div class="home-card">
    <div class="avatar-placeholder">
      <svg viewBox="0 0 24 24">
        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
      </svg>
    </div>
    <h2 id="welcome-message"><%- user ? `Welcome, ${user.username}!` : 'Loading...' %></h2>
    <p id="auth-method"><%- user ? `You are logged in via ${user.auth_method.charAt(0).toUpperCase() + user.auth_method.slice(1)}.` : 'Loading...' %></p>
    <button class="logout-btn">
      <span class="btn-text">Logout</span>
      <svg class="spinner hidden" viewBox="0 0 24 24">
        <circle cx="12" cy="12" r="10" />
      </svg>
    </button>
  </div>
</div>
<script src="/js/scripts.js"></script>
</main>
</body>
</html>
