<%- include('partials/header') %>
  <div class="auth-container">
    <div class="form-wrapper">
      <!-- Login Form -->
      <div class="form-panel login-panel">
        <h2 class="form-title">Login</h2>
        <form id="loginForm" method="POST">
          <div class="message <%= error ? 'error' : message ? 'success' : 'hidden' %>">
            <%= error || message || '' %>
              <button type="button" class="close-btn" aria-label="Close message">×</button>
          </div>
          <div class="form-group">
            <input type="email" id="loginEmail" name="email" required placeholder=" ">
            <label for="loginEmail">
              <svg class="label-icon" viewBox="0 0 24 24">
                <path
                  d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
              </svg>
              Email
            </label>
            <span class="error-message"></span>
          </div>
          <div class="form-group">
            <input type="password" id="loginPassword" name="password" required placeholder=" ">
            <label for="loginPassword">
              <svg class="label-icon" viewBox="0 0 24 24">
                <path
                  d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" />
              </svg>
              Password
            </label>
            <span class="error-message"></span>
          </div>
          <label for="remember" class="checkbox-label">
            <input type="checkbox" name="remember" id="remember">
            <span class="checkbox-text">Remember Me</span>
          </label>
          <div class="form-group checkbox">
          </div>
          <button type="submit" id="loginSubmitBtn" disabled>
            <span class="btn-text">Login</span>
            <svg class="spinner hidden" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="10" />
            </svg>
          </button>
        </form>
        <p class="alternate-action">
          Or login with: <a href="/auth/github" class="github-btn">
            <svg class="github-icon" viewBox="0 0 24 24">
              <path
                d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
            </svg>
            GitHub
          </a>
        </p>
        <p class="toggle-form">Don't have an account? <a href="#" id="toSignup">Sign Up</a></p>
      </div>
      <!-- Signup Form -->
      <div class="form-panel signup-panel">
        <h2 class="form-title">Sign Up</h2>
        <form id="signupForm" action="/auth/signup" method="POST">
          <div class="message hidden">
            <button type="button" class="close-btn" aria-label="Close message">×</button>
          </div>
          <div class="form-group">
            <input type="text" id="signupUsername" name="username" required placeholder=" ">
            <label for="signupUsername">
              <svg class="label-icon" viewBox="0 0 24 24">
                <path
                  d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
              </svg>
              Username
            </label>
            <span class="error-message"></span>
          </div>
          <div class="form-group">
            <input type="email" id="signupEmail" name="email" required placeholder=" ">
            <label for="signupEmail">
              <svg class="label-icon" viewBox="0 0 24 24">
                <path
                  d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
              </svg>
              Email
            </label>
            <span class="error-message"></span>
          </div>
          <div class="form-group">
            <input type="password" id="signupPassword" name="password" required placeholder=" ">
            <label for="signupPassword">
              <svg class="label-icon" viewBox="0 0 24 24">
                <path
                  d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" />
              </svg>
              Password
            </label>
            <span class="error-message"></span>
            <p class="password-hint">
              At least 8 characters, with uppercase, lowercase, number, and special character (e.g., !@#$%).
            </p>
          </div>
          <button type="submit" id="signupSubmitBtn" disabled>
            <span class="btn-text">Sign Up</span>
            <svg class="spinner hidden" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="10" />
            </svg>
          </button>
        </form>
        <p class="toggle-form">Already have an account? <a href="#" id="toLogin">Login</a></p>
      </div>
    </div>
  </div>
  <script src="/js/scripts.js"></script>
  </main>
  </body>

  </html>
